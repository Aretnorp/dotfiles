from pyramid.config import Configurator
from sqlalchemy import engine_from_config

from newco.models import initialize_sql

def main(global_config, **settings):
    """ This function returns a Pyramid WSGI application.
    """
    # Create the configuration settings
    config = Configurator(settings=settings)

    # Scan the Model directory
    config.scan('newco.models')

    # Create the Database Engine
    engine = engine_from_config(settings, 'sqlalchemy.')
    initialize_sql(engine)

    # Scan the Form directory
    config.scan('newco.forms')

    # Add the views (Should probably be in a directory)
    config.add_static_view('static', 'newco:static')
    config.add_static_view('static', 'deform:static')
    config.add_route('home', '/', view='newco.views.my_view',
                     view_renderer='templates/mytemplate.pt')
    return config.make_wsgi_app()


